<h1>Create a Blogger</h1>
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %><br>
  <%=  error %>
  <% end  %>
<% end  %>
<%= form_for @blogger do |f| %>
  <%= f.label :name, value: "Name: " %>
  <%= f.text_field :name %><br>

  <%= f.label :age, value: "Age: " %>
  <%= f.text_field :age %><br>

  <%= f.label :bio, value: "Bio: " %>
  <%= f.text_area :bio %>

 <%= f.submit %>
<% end %>
