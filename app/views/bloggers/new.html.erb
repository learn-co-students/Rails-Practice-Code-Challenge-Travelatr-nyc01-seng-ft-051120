<h1> Create a Blogger </h1>

<% if @blogger.errors.any? %>
    <% @blogger.errors.full_messages.each do |message| %>
        <%= message %><br>
    <% end %>
<% end %>


<%= form_for @blogger do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :age %>
    <%= f.number_field :age %><br>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %><br>
    <%= f.submit %>
<% end %>